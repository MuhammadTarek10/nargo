generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRoles {
  Customer
  Admin
}

model User {
  id         String  @id @db.Uuid @default(uuid())
  first_name String? 
  last_name  String?
  email      String  @unique
  hash       String
  role       UserRoles @default(Customer)
}
